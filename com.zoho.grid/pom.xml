  <artifactId>com.zoho.grid</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  
  <!-- properties tag are used to dynamic assign values to dependencies. So changing at this
   step will update the values(versions) in respective dependency in this pom.We
   do'nt need to scroll down to change the version. just call the property name in dependency-->
  <properties>
		<maven.compiler.target>1.8</maven.compiler.target>
		<maven.compiler.source>1.8</maven.compiler.source>
		<selenium.version>3.12.0</selenium.version>
	</properties>

	<build>
